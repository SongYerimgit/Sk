package com.teamsk;

import java.io.*;
import java.util.*;

public class Random_C {

    private static final String FILE_PATH = "File/MovieList.csv";

    public void recommendRandomMovie() {
        List<String[]> movieList = readCSV(FILE_PATH);

        if (movieList.isEmpty()) {
            System.out.println("ğŸ˜¢ ì˜í™” ëª©ë¡ì´ ë¹„ì–´ ìˆìŠµë‹ˆë‹¤.");
            return;
        }

        Random rand = new Random();
        String[] pick = movieList.get(rand.nextInt(movieList.size()));

        System.out.println("\nğŸ² ëœë¤ ì¶”ì²œ ì˜í™” ê²°ê³¼!");
        System.out.printf("ğŸ‘‰ %s | %s | %s | %s | %s | ê°ë…: %s\n",
                pick[0], pick[4], pick[2], pick[1], pick[3], pick[5]); // title, genre, country, year, runtime, director
    }

    private List<String[]> readCSV(String path) {
        List<String[]> data = new ArrayList<>();

        try (BufferedReader br = new BufferedReader(new FileReader(path))) {
            String line;
            boolean isFirst = true;

            while ((line = br.readLine()) != null) {
                if (isFirst) {
                    isFirst = false;
                    continue; // í—¤ë” ê±´ë„ˆë›°ê¸°
                }
                data.add(line.split(","));
            }
        } catch (IOException e) {
            System.out.println("CSV íŒŒì¼ ì½ê¸° ì˜¤ë¥˜: " + e.getMessage());
        }

        return data;
    }
}
